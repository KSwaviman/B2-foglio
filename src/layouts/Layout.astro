---
import '../../src/styles/globals.css';
import '@fontsource-variable/inter/wght.css';
import interWoff2 from '@fontsource-variable/inter/files/inter-latin-wght-normal.woff2?url';

interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preload" as="font" type="font/woff2" href={interWoff2} crossorigin />
  </head>
  <body class="antialiased text-white bg-complementary">
    <div class="flex flex-col min-h-screen px-6 bg-noise sm:px-12">
      <div class="flex flex-col w-full max-w-5xl mx-auto grow">

        <!-- ðŸ”¹ New Header (inline) -->
        <header class="flex items-center justify-between py-6">
          <a href="/" class="flex items-center space-x-2">
            <!-- If you have a logo file, replace text with: 
            <img src="/deepanjali-logo.svg" alt="Deepanjali logo" class="h-8" /> -->
            <span class="text-xl font-bold tracking-wide">Deepanjali</span>
          </a>
          <nav class="space-x-6 text-gray-300">
            <a href="/" class="hover:text-pink-400">Home</a>
            <a href="/projects" class="hover:text-pink-400">Projects</a>
            <a href="/about" class="hover:text-pink-400">About</a>
            <a href="/contact" class="hover:text-pink-400">Contact</a>
          </nav>
        </header>

        <!-- Main content -->
        <main class="grow"><slot /></main>

        <!-- ðŸ”¹ Simple Footer -->
        <footer class="py-6 mt-12 text-center text-sm text-gray-500 border-t border-gray-800">
          Â© {new Date().getFullYear()} Deepanjali Mahato Â· Built with Astro Â· Hosted on Netlify
        </footer>

      </div>
    </div>
  </body>
</html>
