---
import '../../src/styles/globals.css';
import '@fontsource-variable/inter/wght.css';
import interWoff2 from '@fontsource-variable/inter/files/inter-latin-wght-normal.woff2?url';

interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preload" as="font" type="font/woff2" href={interWoff2} crossorigin />
  </head>
  <body class="antialiased text-white relative overflow-x-hidden">
    
    <!-- Floating blobs -->
    <div class="glass-blob w-96 h-96 top-20 left-10"></div>
    <div class="glass-blob blob-blue w-80 h-80 bottom-10 right-20"></div>
    <div class="glass-blob blob-orange w-72 h-72 top-1/3 right-1/4"></div>

    <!-- Main Content Wrapper -->
    <div class="flex flex-col min-h-screen px-6 sm:px-12 relative z-10">
      <div class="flex flex-col w-full max-w-5xl mx-auto grow">

        <!-- ðŸ”¹ Glass Nav Header -->
        <header class="glass flex items-center justify-between py-4 px-6 rounded-2xl mt-6 relative">
          <!-- Logo -->
          <a href="/" class="flex items-center">
            <img 
              src="https://blogger.googleusercontent.com/img/b/R29vZ2xl/AVvXsEgE4ZT_rg4F9WAMJJx2EI6lWbaY9Gs5rfq_wM__C6BmLRNLvfINSDkNjMWQRWpql0dnI9tHIOZYA0WDO6d4b1VGHDpQy6T-zdlHiiyczjLjK7P_RDw9gAcCA9h2witsc5XzqFjHiK-OPsPJ1M1Ea_E9WKFV4TKqpqvGGktwXQwFXxHNi7s0ycTbiZDTXFA/s664/Capture-removebg-preview.png" 
              alt="Deepanjali logo" 
              class="h-10 w-auto"
            />
          </a>

          <!-- Desktop Menu -->
          <nav class="hidden md:flex space-x-6 text-gray-200">
            <a href="/" class="hover:text-pink-400">Home</a>
            <a href="/projects" class="hover:text-pink-400">Projects</a>
            <a href="/about" class="hover:text-pink-400">About</a>
            <a href="/contact" class="hover:text-pink-400">Contact</a>
          </nav>

          <!-- Mobile Hamburger -->
          <button id="menu-btn" class="md:hidden flex flex-col space-y-1 focus:outline-none">
            <span class="block w-6 h-0.5 bg-white"></span>
            <span class="block w-6 h-0.5 bg-white"></span>
            <span class="block w-6 h-0.5 bg-white"></span>
          </button>

          <!-- Mobile Dropdown -->
          <div id="menu" class="hidden absolute top-full right-0 mt-2 w-40 glass rounded-xl flex-col md:hidden">
            <a href="/" class="block px-4 py-2 hover:text-pink-400">Home</a>
            <a href="/projects" class="block px-4 py-2 hover:text-pink-400">Projects</a>
            <a href="/about" class="block px-4 py-2 hover:text-pink-400">About</a>
            <a href="/contact" class="block px-4 py-2 hover:text-pink-400">Contact</a>
          </div>
        </header>

        <!-- Main content -->
        <main class="grow mt-8"><slot /></main>

        <!-- ðŸ”¹ Glass Footer -->
        <footer class="glass py-4 mt-12 text-center text-sm rounded-2xl">
          Â© {new Date().getFullYear()} Deepanjali Mahato Â· Built with Astro Â· Hosted on Netlify
        </footer>
      </div>
    </div>

    <!-- Toggle Script -->
    <script>
      const menuBtn = document.getElementById("menu-btn");
      const menu = document.getElementById("menu");

      menuBtn.addEventListener("click", () => {
        menu.classList.toggle("hidden");
      });
    </script>
  </body>
</html>
